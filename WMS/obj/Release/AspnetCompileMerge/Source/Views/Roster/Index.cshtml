
@{
    ViewBag.Title = "Index";
}

<article class="row">
        <header>
            <h3>Define Roster</h3><hr/>
        </header>
        @using (Html.BeginForm("Create", "Roster", FormMethod.Post)) 
        {
            @Html.AntiForgeryToken()
            <article class="row">
             <section class="col-md-6">
                <div class="row" style="margin-left:10%; margin-bottom:3%">
                    <div class="control-label col-md-3">Roster Type</div>
                    <div class="col-md-6">
                          @Html.DropDownList("RosterType",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                    </div>
                </div>
    
                <div class="row" style="margin-left:10%; margin-bottom:3%">
                    <div class="control-label col-md-3">Repeat</div>
                    <div class="col-md-6">
                        @Html.DropDownList("chkBox", new List<SelectListItem>
                        { new SelectListItem { Text = "No", Value = "0", Selected=true},
                            new SelectListItem { Text = "Yes", Value = "1"}
                            },new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"}) 
                    </div>
                </div>

                <div class="row" style="margin-left:10%; margin-bottom:3%">
                    <div class="control-label col-md-3">Start Date</div>
                    <div class="col-md-6">
                         <input type="date" id="dateStart" name="dateStart" value="@DateTime.Now.ToString("yyyy-MM-dd")"  class="form-control"/>
                    </div>
                </div>
                
                <div class="row" style="margin-left:10%; margin-bottom:3%">
                    <div class="control-label col-md-3">End Date</div>
                    <div class="col-md-6">
                         <input type="date" id="dateEnd" name="dateEnd" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                </div>

                <div class="row" style="margin-left:10%; margin-bottom:3%">
                    <div class="control-label col-md-3">Work Minutes</div>
                    <div class="col-md-6">
                         <input type="text" id="mints" name="mints" value="585"  class="form-control" />
                    </div>
                </div>
            </section>
            <section class="col-md-6">
                <header>
                    <h4>Apply Roster To: </h4>
                </header>
                 <div style="font-size:15px">
                    <div class="radio"><label><input type="radio" value="shift" name="cars">Shift</label></div>
                    <div class="radio"><label><input type="radio" value="crew" name="cars">Crew</label></div>
                    <div class="radio"><label><input type="radio" value="section"name="cars">Section</label></div>
                    <div class="radio"><label><input type="radio" checked value="employee" name="cars">Employee</label></div>
                </div>
                
                <div id="Option1" class="desc">
                        <div class="row" style="margin-bottom:3%">
                            <div class="col-md-2">
                                <label>Shift</label>
                            </div>
                            <div class="col-md-6">
                                @Html.DropDownList("ShiftList",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                            </div>
                        </div>
                    </div>
                
                <div id="Option2" class="desc" style="display: none;">
                    <div class="row" style="margin-left:10%; margin-bottom:3%">
                        <div class="col-md-6">
                            <label>Crew</label>
                        </div>
                        <div class="col-md-6">
                            @Html.DropDownList("CrewList",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                        </div>
                    </div>
                </div>
                
                <div id="Option3" class="desc" style="display: none;">
                    <div class="row" style="margin-left:10%; margin-bottom:3%">
                        <div class="col-md-6">
                            <label>Section</label>
                        </div>
                        <div class="col-md-6">
                            @Html.DropDownList("SectionList",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                        </div>
                    </div>
                </div>
                
                <div id="Option4" class="desc" style="display: none;">
                    <div class="row" style="margin-left:10%; margin-bottom:3%">
                        <div class="col-md-6">
                            <label>Employee</label>
                        </div>
                        <div class="col-md-6">
                            <input id="JobEmpNo" name="JobEmpNo" type="text" class="form-control"/>
                        </div>
                    </div>
                </div>
            </section>
            </article>
                
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Create roster" class="btn btn-small btn-default btn-success" />
                    </div>
                </div>   
      
        }
</article>
<script src="@Url.Content("~/Scripts/JavaScript1.js")"></script>
<style type="text/css">
    table
    {
        font-family: verdana,arial,sans-serif;
        font-size: 11px;
        color: #333333;
        border-width: 1px;
        border-color: #666666;
        border-collapse: collapse;
    }
    table th
    {
        border-width: 1px;
        padding: 8px;
        border-style: solid;
        border-color: #666666;
        background-color: #dedede;
    }
    table td
    {
        border-width: 1px;
        padding: 8px;
        border-style: solid;
        border-color: #666666;
        background-color: #ffffff;
    }
    input
    {
        width:60px;
    }
</style>
